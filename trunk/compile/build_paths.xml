

<project basedir=".">
        <property name="base.dir" 			value="../"/>  
        <property name="docs.lib.dir"                   value="${base.dir}/lib/" />

        <property name="docs.java.dir"                  value="${base.dir}/src/" />
        <property name="docs.java.classes.dir"  	value="${base.dir}/classes/" />
	<property name="jar.docs.utils"			value="doc-utils.jar" />
        <property name="toolchain.build.dir"		value="${base.dir}/built/"/>
	<property name="source"				value="1.5"/>
	<property name="debug"				value="on"/>
        <path id="docs.utils.classpath">
                <fileset dir="${docs.lib.dir}">
                        <include name="**/*.jar"/>
                </fileset>

        </path>
	<!-- set of files to be excluded from copy when creating the toolchain -->
	<patternset id="toolchain.build.set">
		<exclude name="classes/**"/>
		<exclude name="compile/**"/>
		<exclude name="src/**"/>
		<exclude name="built/**"/>
	</patternset>
	<!-- set of files to be deleted when running clean -->
	<!-- BACKUP YOUR WORK BEFORE CHANGING THIS !!!     -->
	<patternset id="clean.set">
		<include name="**/${jar.docs.utils}"/>
		<include name="classes/**"/>
		<include name="built/**"/>
	</patternset>
        <property name="docs.log4j.properties"  value="${docs.lib.dir}/log4j.properties" />

</project>
